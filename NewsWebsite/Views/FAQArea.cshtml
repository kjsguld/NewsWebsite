@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.FAqarea>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "SiteMaster.cshtml";
    var allfaqs = Model.Content.FAqitem;
}
<div class="container">
    <div class="row">
        <div id="accordion" role="tablist">

            @foreach (var item in allfaqs)
            {
                <div class="card">
                    <div class="card-header" role="tab" id="@{ @item.GetKey()} ">
                        <h5 class="mb-0">
                            <a data-toggle="collapse" href="#@{ @item.GetKey()}" aria-expanded="true" aria-controls="@{ @item.GetKey()}">
                                @item.GetPropertyValue("question")
                            </a>
                        </h5>
                    </div>

                    <div id="@{ @item.GetKey()}" class="collapse" role="tabpanel" aria-labelledby="@{ @item.GetKey()}" data-parent="#accordion">
                        <div class="card-body">
                           @item.GetPropertyValue("answer")
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</div>